<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <%- include('../includes/flashes/error.ejs') %>
        <form class="login-form" action="/login" method="POST">
            <%- include('../includes/csrf_protection.ejs') %>
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input
                    class="<%= validationErrors.find(e => e.param == 'email') ? 'invalid' : null %>"
                    type="email"
                    name="email"
                    id="email"
                    value="<%= oldInput.email || null %>">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input
                    class="<%= validationErrors.find(e => e.param == 'password') ? 'invalid' : null %>"
                    type="password"
                    name="password"
                    id="password"
                    value="<%= oldInput.password || null %>">
            </div>
            <button class="btn" type="submit">Login</button>
        </form>
        <div class="centered">
            <a href="/reset">Reset Password</a>
        </div>
    </main>
<%- include('../includes/end.ejs') %>