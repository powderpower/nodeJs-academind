<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <%- include('../includes/flashes/error.ejs') %>
        <form class="login-form" action="/signup" method="POST" novalidate>
            <%- include('../includes/csrf_protection.ejs') %>
            <div class="form-control">
                <label for="name">Name</label>
                <input
                    class="<%= validationErrors.find(e => e.param == 'name') ? 'invalid' : null %>"
                    type="text"
                    name="name"
                    id="name"
                    value="<%= oldInput.name || null %>">
            </div>
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input
                    class="<%= validationErrors.find(e => e.param == 'email') ? 'invalid' : null %>"
                    type="email"
                    name="email"
                    id="email"
                    value="<%= oldInput.email || null %>">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input
                    class="<%= validationErrors.find(e => e.param == 'password') ? 'invalid' : null %>"
                    type="password"
                    name="password"
                    id="password"
                    value="<%= oldInput.password || null %>">
            </div>
            <div class="form-control">
                <label for="confirmPassword">Confirm Password</label>
                <input
                    class="<%= validationErrors.find(e => e.param == 'confirm_password') ? 'invalid' : null %>"    
                    type="password"
                    name="confirm_password"
                    id="confirm-password"
                    value="<%= oldInput.confirm_password || null %>">
            </div>
            <button class="btn" type="submit">Signup</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>